<div class="background-image"></div>
<div id="register">

   <div class="corpus">
     <div class="left">
       
       <%= image_tag "thp.png", width: "160px", height: "160px" %>


       <p><strong>Bienvenue sur mon exercice THP<br> Rejoins nous!</strong></p>

     </div>



     <div class="right">


       <div class="fields">
         <h2> Sign up ! </h2>
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
           <%= devise_error_messages! %>

      
           <%= f.email_field :email, autocomplete: "email", placeholder: " Email" %>
           <br />
           <%= f.password_field :password, autocomplete: "off", placeholder: " #{@minimum_password_length} characters minimum" %>
   

  
           <br />
           <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: " Confirmation" %>

          

       <div >
         <%= f.submit "Sign up", id:"button"%>
       </div>
          <% end %>

      </div>


      
      <button class="signin"><%= render "devise/shared/links" %></button>
      

      </div>
  
    </div>

</div>
